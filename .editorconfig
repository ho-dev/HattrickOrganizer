root = true

[*]
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
charset = utf-8
indent_style = space
indent_size = 4
tab_width = 4

[*.{java,kt,py,kts,bat,sh,groovy}]
indent_style = space
indent_size = 4
tab_width = 4

[*.{yml,json,xml,html}]
indent_style = space
indent_size = 2
tab_width = 2
